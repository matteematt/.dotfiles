{
  "diagnostic.enable": false,
  "languageserver": {
    "groovy": {
      "command": "java",
      "args": ["-jar", "/Users/mwa75/installs/groovy-language-server/build/libs/groovy-language-server.jar"],
      "filetypes": ["groovy"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
